{
  "name": "old-fashioned",
  "displayName": "Old Fashioned CSS Property Sorter",
  "version": "0.0.1",
  "description": "A CSS property sorter with multiple sorting strategies",
  "publisher": "n8design",
  "author": {
    "name": "n8design"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "images/old-fashioned.png",
  "categories": [
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "css",
    "sorting",
    "formatter",
    "scss",
    "less"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "old-fashioned.sortProperties",
        "title": "Old Fashioned: Sort CSS Properties"
      }
    ],
    "configuration": {
      "title": "Old Fashioned CSS Sorter",
      "properties": {
        "oldFashioned.sorting.strategy": {
          "type": "string",
          "enum": [
            "alphabetical",
            "concentric",
            "idiomatic"
          ],
          "enumDescriptions": [
            "Sort properties alphabetically (A-Z)",
            "Sort from outside to inside (position → text → misc)",
            "Sort according to idiomatic CSS standards"
          ],
          "default": "alphabetical",
          "description": "The strategy to use for sorting CSS properties"
        },
        "oldFashioned.sorting.emptyLinesBetweenGroups": {
          "type": "boolean",
          "default": true,
          "description": "Add empty lines between property groups"
        },
        "oldFashioned.sorting.sortPropertiesWithinGroups": {
          "type": "boolean",
          "default": true,
          "description": "Sort properties alphabetically within each group"
        },
        "oldFashioned.formatting.alwaysSemicolon": {
          "type": "boolean",
          "default": true,
          "description": "Always add a semicolon after property declarations."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "test": "vitest run"
  },
  "dependencies": {
    "stylelint-oldfashioned-order": "^0.0.1",
    "postcss": "^8.4.24",
    "postcss-scss": "^4.0.9",
    "stylelint": "^16.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.2.1"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n8design/old-fashioned"
  }
}