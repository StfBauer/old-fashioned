{
  "name": "shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/packages/shared/dist"
      ],
      "options": {
        "command": "tsc --build",
        "cwd": "packages/shared"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "packages/shared"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src/**/*.ts",
        "cwd": "packages/shared"
      }
    }
  },
  "tags": [
    "scope:shared"
  ]
}