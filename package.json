{
  "name": "old-fashioned",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "nx run-many --target=build --projects=shared,stylelint-oldschool-order,vscode-old-fashioned",
    "build:simple": "npm run build",
    "build:shared": "nx build shared",
    "build:stylelint": "nx build stylelint-oldschool-order",
    "build:vscode": "nx build vscode-old-fashioned",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:shared": "vitest run packages/shared/test",
    "test:stylelint": "vitest run packages/stylelint-oldschool-order/test",
    "test:ui": "vitest --ui",
    "package-vscode": "nx package vscode-old-fashioned",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "clean": "nx reset && rm -rf dist",
    "fix-nx": "nx g @nx/workspace:fix-configuration",
    "test-vscode": "cd packages/vscode-old-fashioned && code --extensionDevelopmentPath=."
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "@vscode/vsce": "^2.22.0",
    "nx": "^16.10.0",
    "@nrwl/eslint-plugin-nx": "^16.10.0",
    "@nrwl/jest": "^16.10.0",
    "@nrwl/js": "^16.10.0",
    "@nrwl/workspace": "^16.10.0",
    "@nrwl/linter": "^16.10.0",
    "@nrwl/devkit": "^16.10.0",
    "@nrwl/esbuild": "^16.10.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.48.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}