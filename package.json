{
  "name": "old-fashioned",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "nx run-many --target=build --projects=shared,stylelint-oldfashioned-order,vscode-old-fashioned",
    "build:simple": "npm run build",
    "build:shared": "nx build shared",
    "build:stylelint": "nx build stylelint-oldfashioned-order",
    "build:vscode": "nx build vscode-old-fashioned",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:shared": "vitest run packages/shared/test",
    "test:stylelint": "vitest run packages/stylelint-oldfashioned-order/test",
    "test:ui": "vitest --ui",
    "package-vscode": "nx package vscode-old-fashioned",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "clean": "nx reset && rm -rf dist",
    "cleanup:full": "npm run clean && find . -name '*.tsbuildinfo' -type f -delete && find . -name '*.map' -type f -delete && find . -name '*.vsix' -type f -delete && find . -path '*/.nx/cache/*' -delete",
    "cleanup:artifacts": "find . -name '*.tsbuildinfo' -type f -delete && find . -name '*.map' -type f -delete && find . -name '*.vsix' -type f -delete",
    "cleanup:interactive": "./tools/cleanup.sh",
    "prepare:publish": "./tools/prepare-for-publish.sh",
    "fix-nx": "nx g @nx/workspace:fix-configuration",
    "test-vscode": "cd packages/vscode-old-fashioned && code --extensionDevelopmentPath=.",
    "benchmark:debug": "npx tsx benchmark/debug-exports.ts",
    "benchmark": "npm run benchmark:debug && npx tsx benchmark/index.ts",
    "benchmark:strategies": "npx tsx benchmark/strategies-benchmark.ts",
    "benchmark:property-count": "npx tsx benchmark/property-count-benchmark.ts",
    "benchmark:css": "npx tsx benchmark/css-parsing-benchmark.ts",
    "benchmark:visualize": "npx tsx benchmark/utils/visualization-cli.ts",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "devDependencies": {
    "@nrwl/devkit": "^19.8.4",
    "@nrwl/esbuild": "^19.8.4",
    "@nrwl/eslint-plugin-nx": "^19.8.4",
    "@nrwl/js": "^19.8.4",
    "@nrwl/linter": "^19.8.4",
    "@nrwl/workspace": "^19.8.4",
    "@nx/vite": "^21.0.3",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "@vscode/vsce": "^3.3.2",
    "conventional-changelog-cli": "^4.0.0",
    "esbuild": "^0.25.4",
    "eslint": "^9.26.0",
    "nx": "^21.0.3",
    "standard-version": "^9.5.0",
    "tmp": "^0.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "standard-version": {
    "scripts": {
      "postchangelog": "nx run vscode-old-fashioned:version"
    }
  }
}