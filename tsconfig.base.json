{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@old-fashioned/shared": [
        "packages/shared/dist"
      ],
      "@old-fashioned/stylelint-oldschool-order": [
        "packages/stylelint-oldschool-order/src"
      ],
      "@old-fashioned/vscode-old-fashioned": [
        "packages/vscode-old-fashioned/src"
      ]
    },
    "composite": true,
    "declarationMap": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/dist/*"
  ]
}