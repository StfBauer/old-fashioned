{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-old-fashioned"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/vscode-old-fashioned/dist/**/*.js"
            ],
            "preLaunchTask": "build-extension"
        }
    ]
}